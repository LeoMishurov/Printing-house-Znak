<Window x:Class="Znak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Znak"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        mc:Ignorable="d"
        Background="#FFE5E5E5"
        Title="MainWindow" Height="580" Width="820">

    <TabControl Background="#FFE5E5E5" >

        <TabItem Header="Лазерная печать">
            <Grid Opacity="1" Background="#FFE5E5E5" VerticalAlignment="Top" Height="538" Margin="2,0,-2,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <Rectangle Height="190" Margin="44,0,44,0" Stroke="Black" VerticalAlignment="Top"/>


                <Label x:Name="LB_price_per_circulation" Content="ЦЕНА ЗА ТИРАЖ" Margin="499,416,0,0" HorizontalAlignment="Left" Width="128" Height="28" VerticalAlignment="Top" FontSize="14" FontWeight="SemiBold" HorizontalContentAlignment="Center" />
                <Button x:Name="But_Price" Content="РАСЧЕТ" Margin="373,454,0,0" Click="But_Price_Click" Height="28" FontSize="14" FontWeight="SemiBold" HorizontalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left" Width="68" />
                <Label x:Name="LB_price_per_sheet" Content="ЦЕНА ЗА ЛИСТ" Margin="191,419,0,0" RenderTransformOrigin="0.486,0.672" HorizontalAlignment="Left" Width="116" Height="28" VerticalAlignment="Top" FontSize="14" FontWeight="SemiBold" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="TB_price_per_sheet"  Margin="200,460,0,0" HorizontalAlignment="Left" Width="96" Height="21" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                <TextBox x:Name="TB_price_tirag"  Margin="519,460,200,0" Height="21" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                <TextBox x:Name="TB_height" Text="{Binding HeightProducts, UpdateSourceTrigger=PropertyChanged}" TextChanged="TB_height_width_TextChanged" GotFocus="TB_height_GotFocus" Margin="540,49,0,0" HorizontalAlignment="Left" Width="47" Height="21" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <TextBox x:Name="TB_width"  Text="{Binding WidthProducts, UpdateSourceTrigger=PropertyChanged}" TextChanged="TB_height_width_TextChanged" GotFocus="TB_height_GotFocus" Margin="621,49,0,0" HorizontalAlignment="Left" Width="47" Height="21" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold"/>
                <Label x:Name="LB_SpecialFormat" Content="СВОЙ ФОРМАТ" Margin="559,11,0,0" HorizontalAlignment="Left" Width="116" Height="25" VerticalAlignment="Top" VerticalContentAlignment="Center" FontWeight="SemiBold" FontSize="14" HorizontalContentAlignment="Center"/>
                <CheckBox x:Name="CB_bleeds" Checked="CB_bleeds_Checked" Content="ДОБАВИТЬ БЛИДЫ" Unchecked="CB_bleeds_Checked" Margin="543,83,0,0" HorizontalAlignment="Left" Width="146" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Bottom"/>
                <Label x:Name="LB_Number_of_products_per_sheet" Content="КОЛИЧЕСТВО ИЗДЕЛИЙ НА ЛИСТЕ" Margin="490,115,0,0" HorizontalAlignment="Left" Width="253" Height="26" VerticalAlignment="Top" FontSize="14" FontWeight="SemiBold" HorizontalContentAlignment="Center" />
                <TextBox x:Name="Quantity_per_sheet" Text="{Binding quantityOnSheet, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="591,156,0,0" HorizontalAlignment="Left" Width="47" Height="21" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="13" FontWeight="SemiBold" HorizontalContentAlignment="Center" />
                <CheckBox x:Name="CB_Dealers" Content="ДЛЯ ДИЛЛЕРОВ" Margin="0,422,0,0" Height="16" VerticalAlignment="Top" VerticalContentAlignment="Bottom" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center" Width="122"/>
                <Label x:Name="LB_ProductFormat" Content="ФОРМАТ ИЗДЕЛИЯ" Margin="226,12,0,0" HorizontalAlignment="Left" Width="138" Height="28" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="14" FontWeight="SemiBold" HorizontalContentAlignment="Center"/>
                <RadioButton x:Name="RB_ProductFormat_Vizitka" Content="90x50" GroupName="ProductFormat" Checked="RB_ProductFormat_Checked" Margin="69,51,0,0" HorizontalAlignment="Left" Width="57" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <RadioButton x:Name="RB_ProductFormat_A7" Content="A7" GroupName="ProductFormat" Checked="RB_ProductFormat_Checked" Margin="142,51,0,0" HorizontalAlignment="Left" Width="48" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <RadioButton x:Name="RB_ProductFormat_A6" Content="A6" GroupName="ProductFormat" Checked="RB_ProductFormat_Checked" Margin="209,51,0,0" HorizontalAlignment="Left" Width="50" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <RadioButton x:Name="RB_ProductFormat_A5" Content="A5" GroupName="ProductFormat" Checked="RB_ProductFormat_Checked" Margin="281,50,0,0" HorizontalAlignment="Left" Width="52" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <RadioButton x:Name="RB_ProductFormat_A4" Content="A4" GroupName="ProductFormat" Checked="RB_ProductFormat_Checked" Margin="355,50,0,0" HorizontalAlignment="Left" Width="46" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <RadioButton x:Name="RB_ProductFormat_A3" Content="A3" GroupName="ProductFormat" Checked="RB_ProductFormat_Checked" Margin="425,50,0,0" Width="50" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center"/>
                <Label x:Name="PaperFormat" Content="ФОРМАТ БУМАГИ" Margin="226,116,0,0" HorizontalAlignment="Left" Width="128" Height="25" VerticalAlignment="Top" FontSize="14" FontWeight="SemiBold" HorizontalContentAlignment="Center"/>
                <RadioButton x:Name="RB_PaperFormatA4" Content="A4" GroupName="PaperFormat" Checked="RB_PaperFormat_Checked" Margin="70,159,0,0" HorizontalAlignment="Left" Width="47" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <RadioButton x:Name="RB_PaperFormatA3" Content="A3" GroupName="PaperFormat" Checked="RB_PaperFormat_Checked" Margin="133,159,0,0" HorizontalAlignment="Left" Width="52" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <RadioButton x:Name="RB_PaperFormatSRA3" Content="SRA3" GroupName="PaperFormat" Checked="RB_PaperFormat_Checked" Margin="198,159,0,0" HorizontalAlignment="Left" Width="64" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <RadioButton x:Name="RB_PaperFormat_325X470" Content="325x470" GroupName="PaperFormat" Checked="RB_PaperFormat_Checked" Margin="274,159,0,0" HorizontalAlignment="Left" Width="82" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <RadioButton x:Name="RB_PaperFormat_330X485" Content="330x485" GroupName="PaperFormat" Checked="RB_PaperFormat_Checked" Margin="368,159,0,0" HorizontalAlignment="Left" Width="81" Height="17" VerticalAlignment="Top" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <Label x:Name="LB" Content="ВЫБОР БУМАГИ" Margin="100,195,0,0" HorizontalAlignment="Left" Width="119" Height="25" VerticalAlignment="Top" FontSize="14" FontWeight="SemiBold"/>
                <ComboBox x:Name="CB_Materials" ItemsSource="{Binding PriceList}" SelectedItem="{Binding PaperType}" DisplayMemberPath="NamePaper"
    Margin="60,226,0,0" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" Width="205" FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center"/>
                <Label x:Name="LB_ProductFormat_Copy" Content="ЛИСТЫ" Margin="38,269,0,0" HorizontalAlignment="Left" Width="59" Height="25" VerticalAlignment="Top" FontSize="14" FontWeight="SemiBold" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="TB_Sheets" Text="{Binding SheetsCount, UpdateSourceTrigger=PropertyChanged}" Margin="127,273,0,0" RenderTransformOrigin="0.505,0.416" Height="21" VerticalAlignment="Top" HorizontalAlignment="Left" Width="99"  FontSize="13" FontWeight="SemiBold"/>
                <TextBox x:Name="TB_Products" Text="{Binding product, UpdateSourceTrigger=PropertyChanged}" TextChanged="TB_Products_TextChanged" Margin="127,320,0,0" HorizontalAlignment="Left" Width="99" Height="21" VerticalAlignment="Top"  FontSize="13" FontWeight="SemiBold"/>
                <RadioButton x:Name="RB_4_0" Content="4+0" GroupName="Color" Margin="292,267,0,0" HorizontalAlignment="Left" Width="57" Height="19" VerticalAlignment="Top"  FontSize="13" VerticalContentAlignment="Center" FontWeight="SemiBold"/>
                <RadioButton x:Name="RB_4_4" Content="4+4" GroupName="Color" Margin="352,267,0,0" HorizontalAlignment="Left" Width="57" Height="19" VerticalAlignment="Top"  FontSize="13" VerticalContentAlignment="Center" FontWeight="SemiBold"/>
                <RadioButton x:Name="RB_1_0" Content="1+0" GroupName="Color" Margin="292,321,0,0" HorizontalAlignment="Left" Width="57" Height="17" VerticalAlignment="Top"  FontSize="13" VerticalContentAlignment="Center" FontWeight="SemiBold"/>
                <RadioButton x:Name="RB_1_1" Content="1+1" GroupName="Color" Margin="352,321,0,0" HorizontalAlignment="Left" Width="57" Height="17" VerticalAlignment="Top"  FontSize="13" VerticalContentAlignment="Center" FontWeight="SemiBold"/>
                <Label Content="ИЗДЕЛИЯ" HorizontalAlignment="Left" Margin="31,315,0,0" VerticalAlignment="Top" Width="78" FontSize="14" FontWeight="SemiBold" HorizontalContentAlignment="Center"/>
                <Label Content="мм" HorizontalAlignment="Left" Margin="587,48,0,0" VerticalAlignment="Top"/>
                <Label Content="мм" HorizontalAlignment="Left" Margin="668,48,0,0" VerticalAlignment="Top"/>
            </Grid>
        </TabItem>

        <TabItem Header="Плотерная печать">
            <local:WindowPloter Loaded="WindowPloter_Loaded" Background="#FFE5E5E5"/>
        </TabItem>
    </TabControl>
</Window>
